                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="onClick8"
                android:transitionGroup="false"
                app:cardBackgroundColor="#FFD600"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/pain"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="#E5E1EE"
                            android:backgroundTint="#D0B92C48"
                            android:contentDescription="@string/todoasas"
                            android:cropToPadding="false"
                            android:elevation="100dp"
                            android:foregroundTint="#00FCFCFC"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/slaw" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            app:cardBackgroundColor="#FFD600"
                            app:cardCornerRadius="20dp">

                            <TextView
                                android:id="@+id/IMG1_PAIN"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/shape1"
                                android:backgroundTint="#2962FF"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="@string/day_8_self_awareness"
                                android:textColor="#F2E9E2E2"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/Quote2"
                                android:layout_width="209dp"
                                android:layout_height="76dp"
                                android:layout_marginTop="25dp"
                                android:background="@drawable/shape1"
                                android:backgroundTint="#0091EA"
                                android:paddingLeft="10dp"
                                android:paddingTop="2dp"
                                android:paddingRight="10dp"
                                android:text="@string/self_awareness_is_an_awareness_of_the_self_with_the_self_being_what_makes_one_s_identity_unique"
                                android:textColor="#FFFCFC" />
                        </androidx.cardview.widget.CardView>

                    </TableRow>

                </TableLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Day2"
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="onClick9"
                app:cardBackgroundColor="#FFBA52"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Day8">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="@color/cardview_light_background"
                            android:backgroundTint="#E9E6E6"
                            android:contentDescription="@string/asasasas"
                            android:cropToPadding="false"
                            android:elevation="100dp"
                            app:srcCompat="@drawable/yogaaa" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#FFBA52"
                            app:cardCornerRadius="20dp">

                            <TextView
                                android:id="@+id/hello"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/shape1"
                                android:backgroundTint="#E683A9"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="@string/day_9_yoga"
                                android:textColor="#F2E9E2E2"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/hell"
                                android:layout_width="209dp"
                                android:layout_height="76dp"
                                android:layout_marginTop="25dp"
                                android:background="@drawable/shape1"
                                android:backgroundTint="#00A4CC"
                                android:paddingLeft="10dp"
                                android:paddingTop="2dp"
                                android:paddingRight="10dp"
                                android:text="@string/yoga_means_union_yoga_means_union_with_god_ego_self_with_the_divine_self_the_infinite_spirit"
                                android:textColor="#FFFEFE" />
                        </androidx.cardview.widget.CardView>

                    </TableRow>

                </TableLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
