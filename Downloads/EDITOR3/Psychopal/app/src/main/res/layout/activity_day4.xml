<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E3"
    tools:context=".Day4A">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="360dp"
        android:layout_height="171dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape1"
        android:contentDescription="TODO"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/trust1" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="331dp"
        android:layout_height="402dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/robotoslab_regular"
                android:text="Day 4: Trust"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="#E95151"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape1"
                android:backgroundTint="#DC62E4"
                android:fontFamily="@font/livvic_regular"
                android:lineSpacingExtra="2sp"
                android:padding="4dp"
                android:paddingLeft="8dp"
                android:text="Have we ever been betrayed or felt treachery from some closed one?\n Be it friend or family or peer. Loosing trust is fathomless."
                android:textColor="#CCE3E4"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape1"
                android:backgroundTint="#A8304FFE"
                android:fontFamily="@font/livvic_regular"
                android:lineSpacingExtra="5sp"
                android:padding="4dp"
                android:text="Trust nowadays seems to be just another hoax."
                android:textColor="#FCFCFC"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape1"
                android:backgroundTint="#37D1D1"
                android:fontFamily="@font/livvic_regular"
                android:lineSpacingExtra="5sp"
                android:padding="8dp"
                android:text="What's more difficult trusting someone back who just betrayed? Aah! finding time travel? We are taught about trust right from our childhood, &quot;Remeber our mom used to warn about accepting gifts from strangers&quot; absolute phenomenon. Some emotion we are taught  straight from our kindergarden days."
                android:textColor="#EDF8F4F4"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape1"
                android:backgroundTint="#D3D6B25B"
                android:fontFamily="@font/livvic_regular"
                android:lineSpacingExtra="5sp"
                android:padding="4dp"
                android:text="Trust yourself, Let people know what you needand be direct about it. Also allow people to reveal them as they are.  Accept your flaws."
                android:textColor="#F2F5F3F3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape1"
                android:backgroundTint="#ABF8E707"
                android:fontFamily="@font/livvic_black"
                android:text="Forgive and move on:"
                android:textColor="#251E1E"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkBox8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:buttonTint="#7C2ED5"
                android:fontFamily="@font/robotoslab_regular"
                android:onClick="OnSelect"
                android:padding="10dp"
                android:text="Hold a rope, on a side you and on another some else maybe your partner/friend."
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape1"
                android:backgroundTint="#81A8BB3B"
                android:fontFamily="@font/livvic_regular"
                android:lineSpacingExtra="5sp"
                android:padding="8dp"
                android:text="Now try to pull it as hard as possible. Tug of war, did the hard rope brush through your hand, did it bleed or you got marks on it? depends. This is how forgiveness work sometimes it better to loose the rope that is to forgive others and let yourself out from toxic chain reactions."
                android:textSize="18sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="120dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:background="@drawable/shape1"
                android:backgroundTint="#D0DAC821"
                android:gravity="center_horizontal"
                android:onClick="done"
                android:text="Exit"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>