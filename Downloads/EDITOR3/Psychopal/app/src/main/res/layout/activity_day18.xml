<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8C5AF90"
    tools:context=".Day18A">

    <TextView
        android:id="@+id/textView29"
        android:layout_width="316dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape1"
        android:backgroundTint="#D2FAF3DE"
        android:fontFamily="@font/livvic_black"
        android:text="Day 18: Read Books"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="358dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView29"
        app:srcCompat="@drawable/book" />

    <ScrollView
        android:layout_width="360dp"
        android:layout_height="355dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape1"
                android:backgroundTint="#D2FAF3DE"
                android:fontFamily="@font/livvic_regular"
                android:padding="10dp"
                android:text="Books are epicenter of knowledge."
                android:textColor="#2C2C2C"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape1"
                android:backgroundTint="#D2FAF3DE"
                android:fontFamily="@font/livvic_regular"
                android:padding="10dp"
                android:text="Good books improve our standard of living. They tone up our intellectual taste they make our outlook broad. They console us when we are depressed."
                android:textColor="#FF2C2C2C"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape1"
                android:backgroundTint="#D2FAF3DE"
                android:fontFamily="@font/livvic_regular"
                android:padding="10dp"
                android:text="Books encourage us when we are defeated. They inspire us to work hard with hope and courage."
                android:textColor="#FF2C2C2C"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape1"
                android:backgroundTint="#D2FAF3DE"
                android:fontFamily="@font/livvic_regular"
                android:padding="10dp"
                android:text="They help us change our perspective."
                android:textColor="#FF2C2C2C"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="336dp"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/libr" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/shape1"
                android:backgroundTint="#D2FAF3DE"
                android:fontFamily="@font/livvic_regular"
                android:padding="10dp"
                android:text="“A room without books is like a body without a soul.” ― Marcus Tullius Cicero "
                android:textColor="#B94120"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>