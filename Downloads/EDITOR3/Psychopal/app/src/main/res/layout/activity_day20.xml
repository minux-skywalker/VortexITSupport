<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1AAB3"
    tools:context=".Day20A">

    <TextView
        android:id="@+id/textView49"
        android:layout_width="357dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape1"
        android:backgroundTint="#B90E1B1D"
        android:fontFamily="@font/livvic_black"
        android:padding="10dp"
        android:text="Day 20: Recreational Places"
        android:textColor="#CDD8B22A"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="361dp"
        android:layout_height="189dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView49"
        app:srcCompat="@drawable/recreat" />

    <ScrollView
        android:layout_width="364dp"
        android:layout_height="319dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape1"
                android:backgroundTint="#F23CA1AD"
                android:fontFamily="@font/robotoslab_regular"
                android:padding="5sp"
                android:text="Hey It's time to go out."
                android:textColor="#C9ECE3E3"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape1"
                android:backgroundTint="#F7BE9C87"
                android:fontFamily="@font/robotoslab_regular"
                android:lineSpacingExtra="4sp"
                android:padding="10sp"
                android:text="Adventure is about…\ngoing out of your comfort zone to open yourself up to the experiences and beauty that life gives you, no matter what path you choose to go on."
                android:textColor="#C9FDFDFD"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView53"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape1"
                android:backgroundTint="#C93387B4"
                android:fontFamily="@font/robotoslab_regular"
                android:lineSpacingExtra="4sp"
                android:padding="10sp"
                android:text="It is exploring where you are and choosing to look at it differently."
                android:textColor="#C9ECE3E3"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView54"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape1"
                android:backgroundTint="#C9BD5555"
                android:fontFamily="@font/robotoslab_regular"
                android:lineSpacingExtra="4sp"
                android:padding="10sp"
                android:text="It’s about going on a road trip not because you want to reach a particular destination, but because the journey there would awesome!"
                android:textColor="#C9ECE3E3"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape1"
                android:backgroundTint="#C145AC7C"
                android:fontFamily="@font/robotoslab_regular"
                android:lineSpacingExtra="4sp"
                android:padding="10sp"
                android:text="Adventure can be found in our everyday lives. In the little things. If only you choose to see it."
                android:textColor="#C9ECE3E3"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView56"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape1"
                android:backgroundTint="#C93387B4"
                android:fontFamily="@font/robotoslab_regular"
                android:lineSpacingExtra="4sp"
                android:padding="10sp"
                android:text="Adventure could mean spicing up your daily routine by trying out a new meal, ordering your coffee in a different way, or even something as simple as trying out a new look from time to time."
                android:textColor="#C9ECE3E3"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView57"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape1"
                android:backgroundTint="#F7BE9C87"
                android:fontFamily="@font/robotoslab_regular"
                android:lineSpacingExtra="4sp"
                android:padding="10sp"
                android:text="At the End of the Day, Adventure is About…      seizing opportunities and taking on life with nothing but passion, enthusiasm and excitement."
                android:textColor="#E8F1E9E9"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="189dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape1"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView49"
                app:srcCompat="@drawable/trekkin" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>